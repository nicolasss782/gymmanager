
<h2 class="title">Membri</h2>

<a class="button is-primary mb-4" href="/members/new">+ Nuovo membro</a>

<table class="table is-fullwidth is-striped">
  <tr>
    <th>Nome</th><th>Telefono</th><th>Email</th><th>Attivo</th><th></th>
  </tr>
  <% if(members.length === 0){ %>
    <tr><td colspan="5">Nessun membro</td></tr>
  <% } %>
  <% members.forEach(m=>{ %>
    <tr>
      <td><a href="/members/<%= m.id %>"><%= m.last_name %> <%= m.first_name %></a></td>
      <td><%= m.phone || '' %></td>
      <td><%= m.email || '' %></td>
      <td><%= m.active ? '✔' : '✘' %></td>
      <td class="has-text-right">
        <a class="button is-small" href="/members/<%= m.id %>/edit">Modifica</a>
        <form method="post" action="/members/<%= m.id %>/delete" style="display:inline" onsubmit="return confirm('Eliminare?')">
          <button class="button is-small is-danger" type="submit">Elimina</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
