<!-- src/views/subscription_form.ejs -->
<h1 class="title">Nuovo Abbonamento</h1>
<form method="post" action="/subscriptions/new">
  <input type="hidden" name="member_id" value="<%= member_id %>">

  <div class="field">
    <label class="label">Data Inizio</label>
    <div class="control">
      <input class="input" type="datetime-local" name="start_date" required>
    </div>
  </div>

  <div class="field">
    <label class="label">Durata</label>
    <div class="field has-addons">
      <p class="control is-expanded">
        <input class="input" type="number" name="duration_value" value="30" min="1" required>
      </p>
      <p class="control">
        <span class="select">
          <select name="duration_unit">
            <option value="days" selected>Giorni</option>
            <option value="minutes">Minuti (test)</option>
            <option value="months">Mesi</option>
          </select>
        </span>
      </p>
    </div>
  </div>

  <div class="field">
    <label class="label">Importo</label>
    <div class="control">
      <input class="input" type="number" step="0.01" name="amount">
    </div>
  </div>

  <div class="field">
    <label class="label">Status</label>
    <div class="select">
      <select name="status">
        <option value="due">Da pagare</option>
        <option value="paid">Pagato</option>
      </select>
    </div>
  </div>

  <button class="button is-success">Salva</button>
</form>
